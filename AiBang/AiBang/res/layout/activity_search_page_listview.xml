<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1eb9d7"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_search_page_listview_return"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#1eb9d7"
            android:drawableLeft="@drawable/clickable_flag_light"
            android:textColor="#fff" />
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_result"
            android:layout_marginLeft="50dp"
            />
    </LinearLayout>
    <ListView
         android:id="@+id/activity_search_page_listview_lv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="@string/name"/>
    <!-- <edu.jxsd.x3510.view.MyListView
        android:id="@+id/activity_search_page_mlv_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" /> -->
</LinearLayout>