<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/activity_personal_page_rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/personal_page_bar"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_personal_page_btn_cancleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/clickable_flag_light"
            android:text="@string/personal_page"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/activity_personal_page_rl_intoduce"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/timeline_bg_image"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="30dp"
            android:paddingTop="30dp" >

            <ImageView
                android:id="@+id/activity_personal_page_iv_head_portrait"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/pic_border_shape"
                android:padding="3dp"
                android:src="@drawable/a102" />

            <TextView
                android:id="@+id/avtivity_presonal_page_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/activity_personal_page_iv_head_portrait"
                android:text="@string/home_page_userName"
                android:textColor="@color/white"
                android:textSize="20sp" />


            <ImageView
                android:id="@+id/activity_home_page_item_iv_sex_icon"
                android:layout_width="20dp"
                android:layout_height="18dp"

                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/avtivity_presonal_page_tv_user_name"
                android:layout_alignTop="@id/avtivity_presonal_page_tv_user_name"
                android:src="@drawable/ic_girl" />
            <Button 
                android:id="@+id/avtivity_presonal_page_btn_modify"
                android:layout_width="30dp"
                android:layout_height="20dp"
                android:text=""
                android:background="@drawable/timeline_bg_image"
                android:textColor="@color/white"
                android:layout_toRightOf="@id/activity_home_page_item_iv_sex_icon"
                android:layout_alignTop="@id/activity_home_page_item_iv_sex_icon"
                />
            <TextView
                android:id="@+id/avtivity_presonal_page_tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/avtivity_presonal_page_tv_user_name"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/activity_personal_page_iv_head_portrait"
                android:text="江西师范大学"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/activity_personal_page_tv_thanks"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="感谢"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_personal_page_tv_concern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="关注"
                    android:textColor="@color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/activity_personal_page_tv_fans"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="粉丝"
                    android:textColor="@color/white"
                    android:textSize="18sp" />
            </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp" >
            <TextView
                android:id="@+id/activity_personal_page_tv_count_ths"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="230"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_personal_page_tv_count_concern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="450"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/activity_personal_page_tv_count_fans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@id/activity_personal_page_tv_fans"
                android:text="450"
                android:textColor="@color/white"
                android:textSize="20sp" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            >
            <TextView 
                android:id="@+id/activity_personal_page_tv_personlized_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_personal_page_tv_personlized_signature"
                android:text="年轻的时候应该去远方"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_alignTop="@id/activity_personal_page_tv_personlized_signature"
                android:layout_marginLeft="20dp"
                />
        </RelativeLayout>
        
    </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" 
            android:padding="10dp">

            <TextView
                android:id="@+id/activity_home_page_item_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_home_page_item_tv_user_name"
                android:text="我的自行车刹车失灵，现在寻求修理山地车高手，帮忙修理一下我的爱车……"
                android:textColor="@color/siderbar_bgcolor" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <ImageView
                android:id="@+id/activity_home_page_item_iv_location"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/activity_home_page_item_head_portrait"
                android:src="@drawable/btn_location_normal" />

            <TextView
                android:id="@+id/activity_home_page_item_tv_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_home_page_item_iv_location"
                android:text="女生宿舍100米"
                android:textColor="@color/thin_color" />

            <TextView
                android:id="@+id/activity_home_page_item_tv_countmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/activity_home_page_item_iv_location"
                android:gravity="center"
                android:text="18"
                android:textColor="@color/thin_color" />

            <ImageView
                android:id="@+id/activity_home_page_item_iv_leave_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/activity_home_page_item_iv_location"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/activity_home_page_item_tv_countmsg"
                android:src="@drawable/btn_comment" />

            <TextView
                android:id="@+id/activity_home_page_tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:layout_alignTop="@id/activity_home_page_item_iv_leave_message"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/activity_home_page_item_iv_leave_message"
                android:text="请吃饭"
                android:textColor="@color/thin_color" />

            <ImageView
                android:id="@+id/activity_home_page_item_iv_gift_icon"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_alignTop="@id/activity_home_page_tv_gift"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/activity_home_page_tv_gift"
                android:src="@drawable/btn_gift_normal" />
        </RelativeLayout>
<!--     <edu.jxsd.x3510.view.PersonalPageListView
        android:id="@+id/activity_personal_page_mlv_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" /> -->

</LinearLayout>