<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/activity_home_page_item_ll" >

    <ImageView
        android:id="@+id/activity_home_page_item_head_portrait"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/activity_home_page_item_tv_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/activity_home_page_item_head_portrait"
                android:layout_gravity="top"
                android:layout_toRightOf="@id/activity_home_page_item_head_portrait"
                android:text="@string/home_page_userName"
                android:textColor="#00a8f1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/activity_home_page_item_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/activity_home_page_item_tv_user_name"
                android:text="24分钟前"
                android:textColor="@color/thin_color" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

            <TextView
                android:id="@+id/activity_home_page_item_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/activity_home_page_item_tv_user_name"
                android:text="我的自行车刹车失灵，现在寻求修理山地车高手，帮忙修理一下我的爱车……"
                android:textColor="@color/siderbar_bgcolor" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" >

            <ImageView
                android:id="@+id/activity_home_page_item_iv_location"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_below="@id/activity_home_page_item_head_portrait"
                android:src="@drawable/btn_location_normal" />

            <TextView
                android:id="@+id/activity_home_page_item_tv_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_home_page_item_iv_location"
                android:text="女生宿舍100米"
                android:textColor="@color/thin_color" />

            <TextView
                android:id="@+id/activity_home_page_item_tv_countmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/activity_home_page_item_iv_location"
                android:gravity="center"
                android:text="18"
                android:textColor="@color/thin_color" />

            <ImageView
                android:id="@+id/activity_home_page_item_iv_leave_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/activity_home_page_item_iv_location"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/activity_home_page_item_tv_countmsg"
                android:src="@drawable/btn_comment" />

            <TextView
                android:id="@+id/activity_home_page_tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:layout_alignTop="@id/activity_home_page_item_iv_leave_message"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/activity_home_page_item_iv_leave_message"
                android:text="请吃饭"
                android:textColor="@color/thin_color" />

            <ImageView
                android:id="@+id/activity_home_page_item_iv_gift_icon"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_alignTop="@id/activity_home_page_tv_gift"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/activity_home_page_tv_gift"
                android:src="@drawable/btn_gift_normal" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>