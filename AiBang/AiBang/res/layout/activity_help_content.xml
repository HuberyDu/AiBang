<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_help_content_ll_touch"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
   >

    <RelativeLayout
        android:id="@+id/activity_help_content_rl_title"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@drawable/actionbar_bg_blue_meizu_transparent"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/activity_help_content_btn_backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/clickable_flag_light"
            android:text="@string/helpContent"
            android:textColor="#fff"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_solid_layer_list"
        android:padding="20dp" >

        <ImageView
            android:id="@+id/activity_help_content_head_iv_portrait"
            android:layout_width="60dp"
            android:layout_height="60dp" 
            android:src="@drawable/iv_head_portrait"
            android:padding="1dp"
            android:background="@drawable/pic_border_shape"/>

        <TextView
            android:id="@+id/activity_help_content_tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/activity_help_content_head_iv_portrait"
            android:text="他好像只狗啊"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/activity_help_content_iv_go_userInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/btn_detail_go" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_solid_layer_list"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:padding="10dp" >
            <TextView
                android:id="@+id/activity_help_content_tv_help_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/activity_help_content_fragment_map"
                android:text="我的自行车刹车失灵，现在寻求修理山地车高手，帮忙修理一下我的爱车……"
                android:textColor="@color/siderbar_bgcolor" />
    
            <fragment
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        xmlns:map="http://schemas.android.com/apk/res-auto"
		        android:id="@id/activity_help_content_fragment_map"
		        android:layout_width="500dp"
		        android:layout_height="200dp"
		         android:layout_centerHorizontal="true"
		        android:layout_marginBottom="10dp"
		        class="com.google.android.gms.maps.SupportMapFragment" 
		         map:cameraTargetLat="28.68415"
        map:cameraTargetLng="115.93806"
        map:cameraZoom="16" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp" >

<!--             <ImageView
                android:id="@+id/activity_help_content_iv_location"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/btn_location_normal" />

            <TextView
                android:id="@+id/activity_help_content_tv_location_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/activity_help_content_iv_location"
                android:text="女生宿舍100米"
                android:textColor="@color/thin_color" /> -->
              <TextView 
                  android:id="@+id/activity_help_content_time"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:text="2013-4-19    20：20"
                  />
            <!--
                 <ImageView 
                android:id="@+id/activity_help_content_iv_map"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/map"
                android:layout_below="@id/activity_help_content_iv_location"
                android:layout_marginTop="10dp"
                />
            -->

            <TextView
                android:id="@+id/activity_help_content_tv_countmsg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/activity_help_content_time"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/thin_color" />

            <ImageView
                android:id="@+id/activity_help_content_iv_leave_message"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignTop="@id/activity_help_content_time"
                android:layout_marginRight="4dp"
                android:layout_toLeftOf="@id/activity_help_content_tv_countmsg"
                android:src="@drawable/btn_comment" />

            <TextView
                android:id="@+id/activity_help_content_tv_gift"
                android:layout_width="wrap_content"
                android:layout_height="18dip"
                android:layout_alignTop="@id/activity_help_content_iv_leave_message"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/activity_help_content_iv_leave_message"
                android:text="请吃饭"
                android:textColor="@color/thin_color" />

            <ImageView
                android:id="@+id/activity_help_content_iv_gift_icon"
                android:layout_width="15dp"
                android:layout_height="18dp"
                android:layout_alignTop="@id/activity_help_content_tv_gift"
                android:layout_marginRight="2dp"
                android:layout_toLeftOf="@id/activity_help_content_tv_gift"
                android:src="@drawable/btn_gift_normal" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bottom_solid_layer_list"
        android:padding="10dp"
        android:orientation="vertical">
        <ImageView 
            android:id="@+id/touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/girl"
            />
        <TextView 
            android:id="@+id/mingzi"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/touxiang"
            android:textSize="14sp"
            android:text="小马"
            android:textStyle="bold"
            />
        <TextView 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@id/mingzi"
            android:layout_toRightOf="@id/touxiang"
            android:text="我可以帮你修一下刹车，约个时间吧"
            />
    </RelativeLayout>>
<!-- <edu.jxsd.x3510.view.MyListView 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    /> -->
</LinearLayout>