<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="0dp" >
			
            <ImageView
      		    	android:id="@+id/activity_search_page_iv_personalphoto"
            		android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:contentDescription="@string/personal_photo"        	     	
        			android:scaleType="matrix"
        			android:layout_centerVertical="true"
        			android:layout_alignParentLeft="true"        			
        			android:layout_marginLeft="8dp"
        			android:padding="8dp"
        			 /> 
        			
            <TextView
                    android:id="@+id/activity_search_page_tv_name"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentTop="true"
        			android:layout_alignParentLeft="true"
        			android:textIsSelectable="true"
        			android:layout_marginLeft="95dp"
        			android:padding="15dp" 
        			android:textSize="18sp"		
					android:textColor="#000" />
            <TextView
                    android:id="@+id/activity_search_page_tv_personal_focus"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_alignParentBottom="true"
        			android:textIsSelectable="true"
        			android:layout_marginLeft="75dp"
        			android:padding="15dp" 
        			android:textSize="15sp"		
					android:textColor="#333" /> 
		   <TextView
		            android:id="@+id/activity_search_page_tv_num1"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_alignParentBottom="true"
        			android:textIsSelectable="true"
        			android:layout_marginLeft="110dp"
        			android:padding="15dp" 
        			android:textSize="15sp"		
					android:textColor="#333" /> 
		  <TextView
		            android:id="@+id/activity_search_page_tv_personal_fans"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_alignParentBottom="true"
        			android:textIsSelectable="true"
        			android:layout_marginLeft="145dp"
        			android:padding="15dp" 
        			android:textSize="15sp"		
					android:textColor="#333" /> 
		   <TextView
		            android:id="@+id/activity_search_page_tv_num2"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_alignParentBottom="true"
        			android:textIsSelectable="true"
        			android:layout_marginLeft="180dp"
        			android:padding="15dp" 
        			android:textSize="15sp"		
					android:textColor="#333" /> 
		  <TextView
		            android:id="@+id/activity_search_page_tv_school"
        			android:layout_width="wrap_content" 
        			android:layout_height="wrap_content"
        			android:layout_alignParentLeft="true"
        			android:layout_alignParentBottom="true"
        			android:textIsSelectable="true"
        			android:layout_marginLeft="215dp"
        			android:padding="15dp"
        			android:textSize="15sp"		
					android:textColor="#333" /> 
        </RelativeLayout>
        
</LinearLayout>